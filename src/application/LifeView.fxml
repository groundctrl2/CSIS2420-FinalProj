<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import application.component.*?>

<BorderPane id="app-root"
	        stylesheets="@styles.css, @styles-resources.css"
	        fx:controller="application.ViewController"
	        fx:id="root"
	        xmlns="http://javafx.com/javafx/21"
	        xmlns:fx="http://javafx.com/fxml/1"
	        >
	<top>
		<HBox id="top-box" fx:id="topBox" BorderPane.alignment="CENTER">
			<Text id="title-text" fx:id="titleText" styleClass="big-text" text="THE GAME OF LIFE" />
		</HBox>
	</top>

	<center>
		<ScrollPane id="center-pane"
		            fx:id="centerPane"
		            BorderPane.alignment="CENTER"
		            hvalue="0.5"
		            vvalue="0.5"
		            >
			<Canvas fx:id="canvas" />
		</ScrollPane>
	</center>

	<right>
		<ToolBar id="toolbar" fx:id="toolbar">
			<Button id="mode-selector"
			        fx:id="modeSelectorButton"
			        styleClass="tbb"
			        text="Change mode"
			        />

			<Button id="zoom-tool"
			        fx:id="zoomToolButton"
			        styleClass="tbb"
			        text="Zoom / Scale / Pan"
			        />

			<Button id="spawn-tool"
			        fx:id="spawnToolButton"
			        styleClass="tbb"
			        text="Spawn tool"
			        />

			<Button id="smite-tool"
			        fx:id="smiteToolButton"
			        styleClass="tbb"
			        text="Smite tool"
			        />

			<Button id="toggler"
			        fx:id="togglerButton"
			        styleClass="tbb"
			        text="Toggle tool"
			        />

			<Button id="randomizer"
			        fx:id="randomizerButton"
			        styleClass="tbb"
			        text="Randomizer"
			        />

			<Button id="stamper"
			        fx:id="stamperButton"
			        styleClass="tbb"
			        text="Stamp tool"
			        />

			<Button id="selection-tool"
			        fx:id="selectionTool"
			        styleClass="tbb"
			        text="Selection tool"
			        />

			<Button id="style-editor"
			        fx:id="styleEditorButton"
			        styleClass="tbb"
			        text="Edit Style"
			        />

			<ConstrainedColorPicker id="color-picker"
			                        fx:id="colorPicker" 
			                        styleClass="tbb"
			                        popupSide="RIGHT"
			                        text="Select color" 
			                        />
		</ToolBar>
	</right>

	<bottom>
		<VBox id="bottom-box" fx:id="bottomBox" BorderPane.alignment="CENTER">
			<HBox id="flavor-text-group" fx:id="flavorTextGroup">
				<Text id="flavor-text" fx:id="flavorText" styleClass="app-text"
				     text="In the beginning, there was nothing..."
				     />
			</HBox>

			<HBox id="button-group" fx:id="buttonGroup">
				<Button id="clear-button"      fx:id="clearButton"     styleClass="cancel-button" text="CLEAR" />
				<Button id="random-button"     fx:id="randomButton"    styleClass="cancel-button" text="RANDOM" />
				<Button id="pause-play-button" fx:id="pausePlayButton" styleClass="app-button" text="PLAY" />
				<Button id="step-button"       fx:id="stepButton"      styleClass="app-button" text="STEP" />
			</HBox>

			<HBox id="misc-group" fx:id="miscGroup">
				<Region HBox.hgrow="ALWAYS" />                     <!-- spacer -->

				<Text id="debug-text" fx:id="debugText"
				      text="Nothing to report"
				      BorderPane.alignment="CENTER_LEFT"
				      />

				<ComboBox id="model-cbox" fx:id="modelCBox">
					<!-- Will be populated in the controller -->
				</ComboBox>

				<Region HBox.hgrow="ALWAYS" />                     <!-- spacer -->
			</HBox>

			<HBox id="size-controls">
				<SliderBox fx:id="ncolsControl"
				           captionText="ncols:"
				           min="3"
				           max="500"
				           value="80"
				           />

				<SliderBox fx:id="nrowsControl"
				           captionText="nrows:"
				           min="3"
				           max="400"
				           value="60"
				           />

				<SliderBox fx:id="cellSizeControl"
				           captionText="cell size:"
				           min="2"
				           max="64"
				           value="16"
				           />

				<SliderBox fx:id="tpsControl"
				           captionText="Ticks per second:"
				           min="1"
				           max="60"
				           value="2"
				           />
			</HBox>
		</VBox>
	</bottom>
</BorderPane>
